<% if(attr('milestone.show')) { %>
<h2>Account activation in 5 steps</h2>
<ol class="milestone">
   <li class="<%=alt(attr('milestone.data.registered'),'passed')%>">
       <a href="/activation/signup.html"><strong>Registration</strong></a>
       <p>Enter your e-mail or choose social network account.</p>
   </li>
   <li class="<%=alt(attr('milestone.data.email_verified'),'passed')%>">
        <a href="/activation/email.html"><strong>Confirm your e-mail address</strong></a>
        <p>Check your mailbox, go by the link and set up password.</p>
   </li>
   <li class="<%=alt(attr('milestone.data.merchant_created'),'passed')%>">
        <a href="/activation/merchant.html"><strong>Create a merchant account</strong></a>
        <p>Add basic info about your merchant.</p>
   </li>
   <li class="<%=alt(attr('milestone.data.fin_settings'),'passed')%>">
        <a href="/activation/settings.html"><strong>Add financial details</strong></a>
        <p>Enter your e-mail or choose social network account.</p>
   </li>
   <li class="<%=alt(attr('milestone.data.docs_min_uploaded'),'passed')%>">
        <a href="/activation/documents.html"><strong>Upload your documents</strong></a>
        <p>Send the required documents to the <a href="mailto:support@fondy.eu">support@fondy.eu</a>.</p>
   </li>
</ol>
<% } else { %>
<h2>Merchant Portal</h2>
<nav class="cards section grid">
<ul>
    <li>
        <a href="<%=$.api.url('portal','/#/')%>">
            <i class="fa fa-dashboard fa-2x"></i>
            Dashboard
        </a>
    </li>
    <li>
        <a href="<%=$.api.url('portal','/#/payments')%>">
            <i class="fa fa-credit-card fa-2x"></i>
            Payments
        </a>
    </li>
    <li>
        <a href="<%=$.api.url('portal','/#/invoices')%>">
            <i class="fa fa-file-text-o fa-2x"></i>
            Invoices
        </a>
    </li>
    <li>
        <a href="<%=$.api.url('portal','/#/buttons')%>">
            <i class="fa fa-qrcode fa-2x"></i>
            Buttons
        </a>
    </li>
    <li>
        <a href="<%=$.api.url('portal','/#/payouts')%>">
            <i class="fa fa-money fa-2x"></i>
            Payouts
        </a>
    </li>
    <li>
        <a href="<%=$.api.url('portal','/#/settings')%>">
            <i class="fa fa-cogs fa-2x"></i>
            Settings
        </a>
    </li>
</ul>
</nav>
<% } %>