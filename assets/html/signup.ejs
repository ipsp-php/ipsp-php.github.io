<h2><%=or(attr('login'),'Sign in','Create Account')%></h2>
<form class="form">
    <% if(attr('error')) { %>
    <div class="form-group">
         <%=attr('error')%>
    </div>
    <% } %>
    <div class="form-group">
        <input type="text" name="email" value="<%=attr('email')%>" placeholder="E-mail" class="field">
    </div>
    <% if(attr('login')) { %>
    <div class="form-group">
        <input type="password" name="password" placeholder="Password" class="field">
    </div>
    <% } %>
    <div class="form-group">
        <button class="btn primary"><%=or(attr('login'),'Login','Signup')%></button>
    </div>
</form>

