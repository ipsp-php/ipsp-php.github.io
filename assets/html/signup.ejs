<h2>
    <%=or(attr('login'),'Sign in','Create Account')%>
</h2>
<form class="form">
    <% if(attr('error')) { %>
    <div class="form-group">
         <%=attr('error')%>
    </div>
    <% } %>
    <div class="form-group">
        <input type="text" name="email" tabindex="1" value="<%=attr('form.email')%>" placeholder="E-mail" class="field">
    </div>
    <% if(attr('login')) { %>
    <div class="form-group">
        <input type="password" tabindex="2" <%=or(attr('two_factor'),'','autofocus')%> name="password" value="<%=attr('form.password')%>" placeholder="Password" class="field">
    </div>
    <% } %>
    <% if(attr('two_factor')) { %>
    <div class="form-group">
        <input type="text" name="otp" value="" tabindex="3" placeholder="OTP Password" class="field">
    </div>
    <% } %>
    <div class="form-group">
        <% if(attr('login')) { %>
           <a class="btn primary pull-right recovery">Password recovery</a>
        <% } %>
        <button class="btn primary"><%=or(attr('login'),'Login','Signup')%></button>
    </div>
</form>

